<div class="pointer_seancen"></div>
<div class="content_wrapper">
<div class="info">
<a href="<%= url_for :controller => :sessions %>">Sessioun</a>: <span class="bold"><%= "#{@seance.session.start.strftime("%Y")}/#{@seance.session.end.strftime("%Y")}"%></span> 
|
<a href="<%= url_for @seance %>">S&eacute;ance</a>: <span class="bold"><%= @seance.start.strftime("%d/%m/%Y") %></span> de <%= @seance.start.strftime("%H:%M") %> jusqu'&agrave;
<%= @seance.end.strftime("%H:%M") %>
</div>

<div class="content">
<table class="content">
	<tr>
		<th style="width: 60px;"><img src="/images/dossiers.png" width="25" alt="dossiers"></th>
		<th style="width: 340px;">Titel</th>
		<th style="width: 240px;">Votes</th>
	</tr>
	<% @seance.texts.each do |t| -%>
	<tr onmouseover="style.backgroundColor='#eee';" onmouseout="style.backgroundColor='#fff'">
		<td><%= link_to t.code, t %></td>
		<td><%= t.title %></td>
		<td><img src="http://chart.apis.google.com/chart?cht=bhs&chs=240x30&chd=t:<%= "#{t.votes_pour.count}|#{t.votes_contre.count}|#{t.abstentions.count}" %>&chds=0,60&chco=<%= "#{vote_to_color_simple(1)},#{vote_to_color_simple(-1)},#{vote_to_color_simple(0)}" %>" /><br />
		<%= "#{t.votes_pour.count}:#{t.votes_contre.count}:#{t.abstentions.count}" %>
		</td>
	</tr>
	<% end -%>
</table>
</div>