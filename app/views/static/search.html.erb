<div class="content">

<!-- TAB 1 -->
<div id="idTab1">
  
  <div class="slider_static">
  
  <%= form_tag({:action => "results_texts", :controller => "static"}, :method => "post") do  %>

<table style="margin-left:10px; margin-top: 10px; margin-bottom:10px;">
<tr><td width="115px"> Deputéiert:</td> 	<td><%= select (:deputy, :id, Deputy.all.collect {|d| [d.name, d.id]}, { :include_blank => "All" })%> </td></tr>
<tr><td> Partei: </td> 		<td> <%= select (:party, :id, Party.all.collect {|d| [d.name, d.id]}, { :include_blank => "All" })%> </td></tr>
<tr><td> Vote: </td> 		<td><input type="checkbox" name="vote" value="Jo"> Jo <input type="checkbox" name="vote" value="Nee"> Nee <input type="checkbox" name="vote" value="Abstentioun">
Abstentioun </td></tr>
<tr><td> Sessioun: </td>	<td><%= select (:session, :id, Session.all.collect {|d| ["#{d.start.strftime("%Y")}/#{d.end.strftime("%Y")}", d.id]}, { :include_blank => "All" })%></td></tr>
<tr><td> Thema: </td>		<td><%= select (:topic, :id, Topic.all.collect {|d| [d.name, d.id]}, { :include_blank => "All" })%></td></tr>
<tr><td> </td>					<td><%= submit_tag("Sich Dossier")%></td></tr>
</table>
<% end %>
  
  </div>

</div> 
<!-- TAB 1 -->

<!-- TAB 2 -->
<div id="idTab2">
  
  <div class="slider_static">
  <%= form_tag({:action => "results_deputies", :controller => "static"}, :method => "post") do  %>

<table style="margin-left:10px; margin-top: 10px; margin-bottom:10px;">
<tr><td width="115px"> Actif:</td>		 	<td><input type="checkbox" name="active" value="Jo"> Jo <input type="checkbox" name="active" value="Nee"> Nee
