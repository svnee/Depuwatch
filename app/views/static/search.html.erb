<% end %>

<%= form_tag({:action => "results_deputies", :controller => "static"}, :method => "post") do  %>
<p><img src="/images/136.gif"> <strong>Deputéiert</strong> </p>

<table>
<tr><td> Actif:</td>		 	<td><input type="checkbox" name="active" value="Jo"> Jo <input type="checkbox" name="active" value="Nee"> Nee
