			      str = str + "#{m.start.year} - ..."
			    else
						if deputy.memberships.size > 1 && i <= deputy.memberships.size then
			      	str = "#{m.start.year} - #{m.end.year}; " + str
						else
							str = "#{m.start.year} - #{m.end.year}" + str
						end
			    end
					i = i + 1
				end
			%> <%= str %></td>
