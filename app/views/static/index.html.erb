<div class="slider"><a href="javascript:;" onmousedown="toggleDiv('mydiv');">Neisten Dossieren</a> </div>
<div class="slider"><a href="javascript:;" onmousedown="toggleDiv('mydiv2');">Top Dossieren</a></div>
<div class="slider"><a href="javascript:;" onmousedown="toggleDiv('mydiv3');">Featured Dossieren</a></div>

<div style="display:block; float:left; clear:both;">
<div id="mydiv" style="display:block; z-index:3;" class="slider_static">Neisten Dossieren </div>
<div id="mydiv2" style="display:none; z-index:2;" class="slider_static">Top Dossieren </div>
<div id="mydiv3" style="display:none; z-index:1;" class="slider_static">Featured Dossieren </div>
</div>

<div class="content_static">

<table class="content_index" id="ordered_table">
<tr>
	<th width="50px"><%= image_tag "dossiers_small.png", :alt => "Dossiers" %></th>
	<th width="80px"><%= image_tag "seances_small.png", :alt => "Séances" %></th>
	<th>Titel</th>
	<th width="185px" style="padding-left: 25px;"><%= image_tag "topics.png", :alt => "Topics" %></th>
</tr>
<% @dossiers.each do |t| -%>
<tr onmouseover="style.backgroundColor='#eee';" onmouseout="style.backgroundColor='#fff'">
		<td><%= link_to t.code, t%></td>
		<td><%= link_to "#{t.seance.start.strftime("%d/%m/%Y")} #{t.seance.start.strftime("%H:%M")}-#{t.seance.end.strftime("%H:%M")}", t.seance %></td>
		<td><%= t.title %></td>
		<td style="padding-left: 25px; text-align: left;"><%= t.topics_to_str.html_safe %></td>
</tr>
<% end -%>

</table>
</div>
