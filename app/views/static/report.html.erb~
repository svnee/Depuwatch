	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field">
	    <%= f.label :email %> (nëmme falls Réckmeldung erwënscht)<br />
	    <%= f.text_field :email %>
	  </div>
	  <div class="field">
	    <%= f.label :page %><br />
	    <%= f.text_field :page, {:value => @page} %>
	  </div>
	  <div class="field">
	    <%= f.label :description %><br />
	    <%= f.text_area :description %>
	  </div>
	  <div class="actions">
