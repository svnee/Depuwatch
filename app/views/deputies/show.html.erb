<div class="pointer_deputeiert"></div>
<div class="content_wrapper">
<div class="info">

<a href="/deputies">D&eacute;put&eacute;</a>: <%= @deputy.name %> | Partei: <%= @deputy.party.name %>
</div>

<div class="content">

<div class="wrapper_text"> 
<div class="projet">
<img width="137" src="<%= @deputy.pc_img.nil? ? "/images/empty_abg_med.gif" : @deputy.pc_img %>">
</div>

<div class="result">

	<div class="h2"><span class="h2">Numm: </span> <%= @deputy.name %></div>
	<div class="h2_partei_wrapper"> <div class="h2_partei">Partei:</div>  <div class="<%= @deputy.party.name %>"></div> <div class="h2_partei_name"><%= @deputy.party.name %></div>   </div> 

	<div class="h2"><img src="/images/politikercheck_logo.jpg"> Stell dem <%= @deputy.name %> eng Fro op <a href="<%= @deputy.pc_profile.nil? ? "http://www.politikercheck.lu/" : @deputy.pc_profile %>">Politikercheck.lu</a></div>

</div>
<div class="dossiers2"><div class="result2">
<div class="h2"><span class="h2">Pr&eacute;sence lors des votes: </span> <%= number_to_percentage(@deputy.presence,:precision => 2) %></div>
	<% p, c, a = @deputy.split_votes -%>
<table>
	<tr>
		<td style="width: 15px; text-align:left; background-color:<%=vote_to_color(1)%>"> </td>
        <td style="text-shadow: 2px 2px 3px rgb(205, 205, 205); width: 50px; text-align:left; font-weight:normal;">Pour:</td>
		<td style="width: 50px; text-align:left;"><%= p.count %></td>
	</tr>
    <tr>
		<td style="width: 15px; text-align:left; background-color:<%=vote_to_color(-1)%>"> </td>
        <td style="text-shadow: 2px 2px 3px rgb(205, 205, 205); width: 50px; text-align:left; font-weight:normal;">Contre:</td>
		<td style="width: 50px; text-align:left;"><%= c.count %></td>
	</tr>
	 <tr>
		<td style="width: 15px; text-align:left; background-color:<%=vote_to_color(0)%>"> </td>
        <td style="text-shadow: 2px 2px 3px rgb(205, 205, 205); width: 50px; text-align:left; font-weight:normal;">Abstentions:</td>
		<td style="width: 50px; text-align:left;"><%= a.count %></td>
	</tr>
</table>
<p>
<img src="http://chart.apis.google.com/chart?cht=bhs&amp;chs=240x30&amp;chd=t:<%= "#{p.count}|#{c.count}|#{a.count}" %>&amp;chds=0,<%=p.count+c.count+a.count%>&amp;chco=<%= "#{vote_to_color_simple(1)},#{vote_to_color_simple(-1)},#{vote_to_color_simple(0)}" %>" />
</div></div>

</div>

<table class="content">
	<tr>
		<th width="130px"><img width="25" src="/images/sessions.png" alt="logo"></th>
		<th width="130px"><img width="25" src="/images/seances_small.png" alt="logo"></th>
		<th width="95px"><img width="25" alt="logo" src="/images/dossiers_small.png"></th>
		<th class="vote">Vote</th>
		<th class="vote_next">Thema</th>
		<th width="130px">Délégéierten</th>
	</tr>
	<% @deputy.votes.each do |v| -%>
	<tr onmouseover="style.backgroundColor='#eee';" onmouseout="style.backgroundColor='#fff'">
		<td><%= link_to "#{v.text.seance.session.start.strftime("%Y")}/#{v.text.seance.session.end.strftime("%Y")}", v.text.seance.session%></th>
		<td><%= link_to v.text.seance.start.strftime("%d/%m/%Y"), v.text.seance %></th>
		<td><%= link_to v.text.code, v.text %></td>
		<td style="background-color:<%= vote_to_color(v.vote) %>"></td>
		<td class="vote_next"><%= v.text.topics_to_str.html_safe %></th>
		<td><%= v.delegate.nil? ? "" : link_to(v.delegate.name, v.delegate) %></th>
	</tr>
	<% end -%>
</table>


</div>

