					<td style="width: 50px; text-align:left;"><%= t.votes_pour.count %></td>
				</tr>
			    <tr>
					<td style="width: 15px; text-align:left; background-color:<%=vote_to_color(-1)%>"> </td>
			        <td style="text-shadow: 2px 2px 3px #CDCDCD; width: 50px; text-align:left; font-weight:bold;">Contre:</td>
					<td style="width: 50px; text-align:left;"><%= t.votes_contre.count %></td>
				</tr>
				 <tr>
					<td style="width: 15px; text-align:left; background-color:<%=vote_to_color(0)%>"> </td>
			        <td style="text-shadow: 2px 2px 3px #CDCDCD; width: 50px; text-align:left; font-weight:bold;">Abstentions:</td>
					<td style="width: 50px; text-align:left;"><%= t.abstentions.count %></td>
				</tr>
			</table>
			</td>
		</tr>
		<% end -%>
	</table>
</div>