	<tr>
		<th style="width: 150px;">Pour</th>
		<th style="width: 150px;">Contre</th>
		<th style="width: 150px;">Abstention</th>
	</tr>
	<tr>
		<td>
			<ul id="votes">
				<% @text.votes_pour.each do |v| -%>
					<li><%= link_to v.deputy.name, v.deputy %> <%="(#{v.deputy.party.name})" %> <%= "[Par: #{v.delegate.name}]" if !v.delegate.nil? %></li>
				<% end -%>
			</ul>
		</td>
		<td>
			<ul id="votes">
				<% @text.votes_contre.each do |v| -%>
					<li><%= link_to v.deputy.name, v.deputy %> <%="(#{v.deputy.party.name})" %> <%= "[Par: #{v.delegate.name}]" if !v.delegate.nil? %></li>
				<% end -%>
			</ul>
		</td>
		<td>
			<ul id="votes">
				<% @text.abstentions.each do |v| -%>
					<li><%= link_to v.deputy.name, v.deputy %> <%="(#{v.deputy.party.name})" %> <%= "[Par: #{v.delegate.name}]" if !v.delegate.nil? %></li>
				<% end -%>
			</ul>
		</td>
	</tr>
</table>